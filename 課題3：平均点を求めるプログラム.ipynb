   "source": [
    "total = 0\n",
    "i = 0\n",
    "\n",
    "while True:\n",
    "    score = int(input(\"点数を入力してください：\"))\n",
    "    if score == -1:\n",
    "        break\n",
    "    else:\n",
    "        i += 1\n",
    "        total = total + score\n",
    "        \n",
    "print(f\"{i}人のテストの平均点は{round(float(total / i), 1)}点です。\")"
   ]
  }
